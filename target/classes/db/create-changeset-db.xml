<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">
    <changeSet id="create-table-writer" author="ladyaquamarina">
        <createTable tableName="Writer">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="firstName" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="secondName" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="Writer" indexName="writer_name">
            <column name="firstName"/>
            <column name="secondName"/>
        </createIndex>
        <addForeignKeyConstraint
                baseTableName="Writer"
                baseColumnNames="id"
                constraintName="fk_writer_id"
                referencedTableName="writer_post"
                referencedColumnNames="writer_id"/>
    </changeSet>

    <changeSet id="create-table-post" author="ladyaquamarina">
        <createTable tableName="Post">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="state" type="varchar(50)" defaultValue="active"/>
        </createTable>
        <createIndex tableName="Post" indexName="post_content">
            <column name="content"/>
        </createIndex>
        <addForeignKeyConstraint
                baseTableName="Post"
                baseColumnNames="id"
                constraintName="fk_post_id"
                referencedTableName="writer_post"
                referencedColumnNames="post_id"/>
        <addForeignKeyConstraint
                baseTableName="Post"
                baseColumnNames="id"
                constraintName="fk_post_id"
                referencedTableName="post_label"
                referencedColumnNames="post_id"/>
    </changeSet>

    <changeSet id="create-table-label" author="ladyaquamarina">
        <createTable tableName="Label">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createIndex tableName="Label" indexName="name">
            <column name="name"/>
        </createIndex>
        <addForeignKeyConstraint
                baseTableName="Label"
                baseColumnNames="id"
                constraintName="fk_label_id"
                referencedTableName="post_label"
                referencedColumnNames="label_id"/>
    </changeSet>

    <changeSet id="create-table-writer_post" author="ladyaquamarina">
        <createTable tableName="writer_post">
            <column name="writer_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_writer_id" references="Writer(id)" />
            </column>
            <column name="post_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_post_id" references="Post(id)"/>
            </column>
        </createTable>
        <createIndex tableName="writer_post" indexName="wp_ids">
            <column name="writer_id"/>
            <column name="post_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-table-post_label" author="ladyaquamarina">
        <createTable tableName="post_label">
            <column name="post_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_post_id" references="Post(id)"/>
            </column>
            <column name="label_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_label_id" references="Label(id)" />
            </column>
        </createTable>
        <createIndex tableName="post_label" indexName="pi_ids">
            <column name="post_id"/>
            <column name="label_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>